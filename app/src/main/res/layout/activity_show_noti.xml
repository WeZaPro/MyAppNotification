<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ShowNotiActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Nitification"/>

        <ImageView
            android:id="@+id/mvGetValueFormNotifyImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@mipmap/ic_launcher"/>

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/tvGetValueFormNotifyTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="15sp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tvGetValueFormNotifyBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Body"
            android:textSize="15sp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tvGetValueFormNotifyUID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UID"
            android:textSize="15sp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tvGetValueFormNotifyToken"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Token"
            android:textSize="15sp"
            android:gravity="center"
            />


    </LinearLayout>


</LinearLayout>